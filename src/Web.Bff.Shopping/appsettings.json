{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "basket": {
        "ClusterId": "basketCluster",
        "Match": {
          "Path": "/basket-api/{*catchall}"
        }
      },
      "catalog": {
        "ClusterId": "catalogCluster",
        "Match": {
          "Path": "/catalog-api/{*catchall}"
        }
      },
      "ordering": {
        "ClusterId": "orderingCluster",
        "Match": {
          "Path": "/ordering-api/{*catchall}"
        }
      }
    }
  },
  "Clusters": {
    "basketCluster": {
      "Destinations": {
        "basketApi": {
          "Address": "http://basket.api:8000"
        }
      }
    },
    "catalogCluster": {
      "Destinations": {
        "catalogApi": {
          "Address": "http://catalog.api:8000"
        }
      }
    },
    "orderingCluster": {
      "Destinations": {
        "orderingApi": {
          "Address": "http://ordering.api:8000"
        }
      }
    }
  }
}
